<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/myinfo_title_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
		android:background="@drawable/chunsebeijing">

      <cn.edu.zzti.soft.zxing.view.RoundView
           android:layout_centerInParent="true"
	       android:id="@+id/myinfo_img"
	       android:layout_width="80dp"
	       android:layout_height="80dp"
	       android:scaleType="centerCrop"
	       android:src="@drawable/p"/>

      <TextView 
          android:id="@+id/title_name"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:layout_below="@id/myinfo_img"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/result_view"
          android:text="Name:love zhu"
          />
    </RelativeLayout>
    <ScrollView 
	    android:layout_below="@id/myinfo_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	<LinearLayout 
	    android:id="@+id/ll_myinfo"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"  
	    android:orientation="vertical">
	    <LinearLayout
	        android:id="@+id/gerenxinxi_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="15dp"
	        android:orientation="horizontal">
	        <ImageView
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/gerenxinxilogo"
	            />
	        <TextView
	            android:gravity="center_vertical"
	            android:layout_marginLeft="20dp"
	            android:id="@+id/gerenxinxi_Text"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:textSize="16dp"
	            android:text="个人信息"
	            android:textColor="#000">
	        </TextView>
	    </LinearLayout>
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:background="#a6a4a4"
	        android:layout_margin="1dp"/>
	    <LinearLayout
	        android:padding="15dp"
	        android:id="@+id/qianbao_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <ImageView
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/qianbao"
	            />
	        <TextView
	            android:gravity="center_vertical"
	            android:layout_marginLeft="20dp"
	            android:id="@+id/qianbao_Text"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:textSize="16dp"
	            android:text="钱包"
	            android:textColor="#000" />
	    </LinearLayout>
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:background="#a6a4a4"
	        android:layout_margin="1dp"
	        />
	    <LinearLayout
	        android:id="@+id/xiugaimima_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="15dp"
	        android:orientation="horizontal">
	        <ImageView
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/xiugaimima"/>
	        <TextView
	            android:layout_marginLeft="20dp"
	            android:gravity="center_vertical"
	            android:id="@+id/xiugaimima_Text"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:textSize="16dp"
	            android:text="修改密码"
	            android:textColor="#000"
	            />
	
	    </LinearLayout>
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:layout_margin="1dp"
	        android:background="#a6a4a4"/>
	    <LinearLayout
	        android:id="@+id/set_layout"
	        android:padding="15dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <ImageView
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/shezhi"/>
	        <TextView
	            android:id="@+id/set_Text"
	            android:layout_marginLeft="20dp"
	            android:gravity="center_vertical"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:textSize="16dp"
	            android:text="设置"
	            android:textColor="#000"
	            />
	    </LinearLayout>

	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:layout_margin="1dp"
	        android:background="#a6a4a4"
	        />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>


